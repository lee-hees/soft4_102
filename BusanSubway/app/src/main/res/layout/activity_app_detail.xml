<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20sp"
            android:text="소프트웨어개발실습4"
            android:textAppearance="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="5sp"
            android:text="&lt;개발자 정보&gt;\n팀장 : 이희승\n팀원 : 이수호\n팀원 : 변진원\n팀원 : 이창열"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="&lt;프로젝트 개요&gt;\n타사 앱에서는 각 객실의 좌석을 확인할 수 없음\n지하철 이용객 및 노인 인구 증가\n40대 이상 스파트폰 보유량 증가\n\n지하철 각 객실의 혼잡도와 도착 시간 예측 앱 서비스 구현"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>